# Firebase (公開キー - クライアントSDK用)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# NextAuth.js (秘密キー)
NEXTAUTH_SECRET=your_nextauth_secret_generated_by_openssl_rand
NEXTAUTH_URL=http://localhost:3000

# 管理者メールアドレス
ADMIN_EMAIL=admin@example.com

# Firebase Admin SDK (省略可 - ADC使用時)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# LINE Bot連携
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token

# 暗号化キー (openssl rand -hex 32 で生成)
ENCRYPTION_KEY=your_32_byte_hex_key

# Vercel Cron認証
CRON_SECRET=your_cron_secret

# アフィリエイト (任意 - 未設定時は直リンクにフォールバック)
NEXT_PUBLIC_RAKUTEN_AFFILIATE_ID=
NEXT_PUBLIC_AMAZON_ASSOCIATE_TAG=
NEXT_PUBLIC_A8_MEDIA_ID=
